# Google Cloud Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Service Name (base name for all resources)
# Must be lowercase letters, numbers, and hyphens only. Start with a letter.
SERVICE_NAME=ghost-cms

# Ghost Configuration
# Leave GHOST_URL empty on first deployment, then update with actual Cloud Run URL
GHOST_URL=
MAIL_FROM='"Your Blog Name" <noreply@yourdomain.com>'

# Database Configuration (Cloud SQL)
DATABASE_INSTANCE_NAME=ghost-db
DATABASE_NAME=ghost_production
DATABASE_USER=ghost
DATABASE_PASSWORD=your-secure-password-here
DATABASE_TIER=db-f1-micro
# Enable deletion protection for production (prevents accidental deletion)
DELETION_PROTECTION=false
# This will be auto-generated: /cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DATABASE_SOCKET_PATH=/cloudsql/${GCP_PROJECT_ID}:${GCP_REGION}:${DATABASE_INSTANCE_NAME}

# Cloud Storage Configuration
GCS_BUCKET=${GCP_PROJECT_ID}-ghost-content
GCS_ASSET_DOMAIN=https://storage.googleapis.com/${GCS_BUCKET}

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=ghost-cms
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MEMORY=1Gi
CLOUD_RUN_CPU=1
CLOUD_RUN_TIMEOUT=300
CLOUD_RUN_CONCURRENCY=80

# Service Account
SERVICE_ACCOUNT_NAME=ghost-cms-sa

# Container Registry
CONTAINER_IMAGE_NAME=ghost-cms
